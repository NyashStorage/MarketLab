{
  "name": "marketlab-one-time-links",
  "version": "1.0.0",
  "description": "Тестовое задание для компании MarketLab",
  "author": {
    "name": "Daniil Koshkin",
    "email": "contact@nyashmyash99.ru",
    "url": "https://nyashmyash99.ru"
  },
  "type": "module",
  "scripts": {
    "dev": "nest start --watch -c ./configs/dev/nest-cli.json",
    "build": "nest build -c ./configs/prod/nest-cli.json",
    "prod": "node ./dist/main.js",
    "typeorm:cli": "typeorm-ts-node-esm -d ./scripts/cli-data-source.ts",
    "migration:generate": "npm run typeorm:cli -- migration:generate src/infrastructure/database/migrations/RenameMe",
    "migration:run": "npm run typeorm:cli -- migration:run",
    "migration:revert": "npm run typeorm:cli -- migration:revert",
    "test:unit": "npm run build && jest -c ./test/jest-unit.config.mjs --runInBand",
    "test:e2e": "npm run build && jest -c ./test/jest-e2e.config.mjs --runInBand --detectOpenHandles --forceExit",
    "lint": "eslint --cache ."
  },
  "dependencies": {
    "@fastify/static": "^7.0.4",
    "@nestjs/common": "^10.4.13",
    "@nestjs/core": "^10.4.13",
    "@nestjs/platform-fastify": "^10.4.13",
    "@nestjs/swagger": "^8.1.0",
    "@nestjs/typeorm": "^10.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^16.4.7",
    "envalid": "^8.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.8",
    "@nestjs/schematics": "^10.2.3",
    "@nestjs/testing": "^10.4.13",
    "@swc/cli": "^0.5.2",
    "@swc/core": "^1.10.0",
    "@swc/jest": "^0.2.37",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.1",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "jest-mock-extended": "^4.0.0-beta1",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
    "uuid": "^11.0.3"
  }
}
